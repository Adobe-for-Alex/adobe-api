{
  "name": "telegram-bot",
  "version": "0.0.0",
  "description": "Это микросервис предоставляющий REST-подобное API для ограниченного фукнционала Adobe",
  "main": "./src/index.ts",
  "scripts": {
    "preinstall": "only-allow pnpm && cp .env.template .env",
    "postinstall": "pnpm dev:up && pnpm prisma:migrate:apply; pnpm dev:down",
    "prisma:migrate:new": "prisma migrate dev --create-only",
    "prisma:migrate:apply": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "test": "jest",
    "dev:up": "docker compose up -d",
    "dev": "pnpm dev:up && docker compose attach server",
    "dev:down": "docker compose down",
    "start:develop": "nodemon --signal SIGINT -r dotenv/config ./src/index.ts",
    "start:production": "node dist/index.js",
    "build": "tsc",
    "deploy": "TARGET=production docker compose build && docker compose push"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node-cron": "^3.0.11",
    "@types/selenium-webdriver": "^4.1.27",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "express": "^4.21.1",
    "express-async-handler": "^1.2.0",
    "node-cron": "^3.0.3",
    "only-allow": "^1.2.1",
    "prisma": "^5.21.1",
    "selenium-webdriver": "^4.26.0",
    "tslib": "^2.8.1",
    "zip-a-folder": "^3.1.8"
  }
}
